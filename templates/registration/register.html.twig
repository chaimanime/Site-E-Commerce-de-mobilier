{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<br>
<br>
<br>
<br>
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <fieldset style=" margin-left: 450px;
    margin-right: auto;
    width: 30em;">
                     
        <legend style="padding:10px 0; font-size:20px;">Sign Up</legend>

    {{ form_start(registrationForm) }}
        <div class="col-lg-40">
        {{ form_row(registrationForm.username, {label: 'Nom Utilisateur', 
        'attr':{'class':'form-control','placeholder' :'Entrer votre nom utilisateur'}}) }}
        </div>
        <br>

        <div class="col-lg-40">
       {{ form_row(registrationForm.email, {label: 'E-mail',
       'attr':{'class':'form-control','placeholder' :'Entrer votre e-mail'}}) }}
       </div>
        <br>

        <div class="col-lg-40">
        {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe',
        'attr':{'class':'form-control','placeholder' :'Entrer votre mot de passe'}}) }}
        </div>
        <br>

    				<div class="form-group">
						 <center>	<input type="submit" value="Sign Up" class="btn btn-primary">
                         <br><br><p>Already have an account ? <a href="{{ path('app_login') }}">  Sign In. </a> </p>
						 </center>
                         </div>
    </fieldset>
    {{ form_end(registrationForm) }}
    <br>
<br>
<br>
<br>
{% endblock %}
